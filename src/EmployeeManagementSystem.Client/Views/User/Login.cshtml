@model EmployeeManagementSystem.Common.Command.LoginCommand

@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}

<div class="container">

    <div class="mt-5">
        <div class="d-flex justify-content-center">
            <div class="d-flex flex-column justify-content-center col-lg-6 col-md-4 col-sm-2">
                @using (Html.BeginForm("Submit", "User"))
                {
                    <div class="">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="d-flex">
                    <button type="submit" class="btn btn-primary mt-2 w-100">Login</button>
                        </div>
                }
            </div>
        </div>
    </div>
</div>


