@model EmployeeManagementSystem.Common.Command.LoginCommand

@{
    ViewData["Title"] = "Login Page";
    Layout = null;
}





<div class="login-form">
    <div class="form-signin text-center">
       
            <img class="mb-4" src="~/img/logo.svg" alt="" width="72" height="57">
            <h1 class="h3 mb-3 fw-normal">Lütfen giriş yapınız</h1>

            @using (Html.BeginForm("Submit", "User"))
            {
                <div class="form-floating mb-1">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" , @placeholder="name@example.com" ,@id="floatingInput" ,@type="email" , @required = "required"  })
                    <label for="floatingInput">Mail Adres</label>
                </div>
                <div class="form-floating">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" ,@id="floatingPassword" ,@placeholder="Şifre" , @required = "required"})
                    <label for="floatingPassword">Şifre</label>
                </div>            
              <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş</button>
            }
     
    </div>
</div>

