@model EmployeeManagementSystem.Common.Command.CreateUserCommand

@{
    ViewData["Title"] = "View";
}

<div class="page-title">Yeni Kullanıcı Ekle</div>
<hr />
<div class="row">
    <div class="col-lg-12 col-md-6">
        <div class="card">
            <div class="card-body">
        <form asp-action="CreateUser">
     
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                  <div class="row">
                        <div class="col-lg-6 col-md-12 ">

                            <div class="form-group">
                                <label for="control-label">Adı</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            </div>
                        <div class="col-lg-6 col-md-12 ">

                            <div class="form-group">
                                <label for="control-label">Soyadı</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                        </div>
                  </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-12 ">

            <div class="form-group">
                        <label for="control-label">Mail Adresi</label>
                        <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            </div>
                        <div class="col-lg-6 col-md-12 ">

            <div class="form-group">
                        <label for="control-label">Telefon Numarası</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            </div>
            </div>
                  
            <div class="form-group">
                        <label for="control-label">Şifre</label>
                        <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-2 d-flex justify-content-between">
                <input type="submit" value="Kullanıcı Ekle" class="btn btn-primary" />
              
            </div>
        </form>
        </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
